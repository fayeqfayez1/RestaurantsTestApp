<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restauran">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.RestaurantsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.ViewInvoice.view.ViewInvoiceActivity"
            android:exported="false" />
        <activity
            android:name=".features.MealDetails.view.MealDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".features.menu.view.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".features.logIn.view.LogInActivity"
            android:exported="false" />
        <activity
            android:name=".features.splash.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.main.view.MainActivity"
            android:exported="true" />
    </application>

</manifest>